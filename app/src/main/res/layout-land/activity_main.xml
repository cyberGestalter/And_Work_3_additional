<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_loaded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/before_load"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_margin"
        android:hint="@string/link_hint"
        android:inputType="textUri"
        app:layout_constraintStart_toEndOf="@+id/image_loaded"
        app:layout_constraintTop_toTopOf="@+id/image_loaded" />

    <Button
        android:id="@+id/button_picasso_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:onClick="loadImageWithPicasso"
        android:text="@string/button_label_picasso_load"
        app:layout_constraintStart_toEndOf="@+id/image_loaded"
        app:layout_constraintTop_toBottomOf="@+id/input_link" />

    <Button
        android:id="@+id/button_glide_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:onClick="loadImageWithGlide"
        android:text="@string/button_label_glide_load"
        app:layout_constraintStart_toEndOf="@+id/image_loaded"
        app:layout_constraintTop_toBottomOf="@+id/button_picasso_load" />

    <Button
        android:id="@+id/button_native_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:onClick="loadImageWithAndroid"
        android:text="@string/button_label_native_load"
        app:layout_constraintStart_toEndOf="@+id/image_loaded"
        app:layout_constraintTop_toBottomOf="@+id/button_glide_load" />
</androidx.constraintlayout.widget.ConstraintLayout>